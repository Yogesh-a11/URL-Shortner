<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body>
   <h1>URL Shortner</h1>
   <% if (locals.id) { %>
    <p>Your Short URL: http://localhost:3000/<%= locals.id %></p>
   <% } %>
   <div>
        <form action="/url" method="POST">
            <label for="url">Enter Your Original URL</label>
            <input type="text" placeholder="https://www.google.com" name="url" />
            <button type="submit">Shorten URL</button>
        </form>
   </div>
   <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S. No</th>
                    <th>Short URL</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= url.shortId %></td>
                            <td><a href="<%= url.redirectURL %>"><%= url.redirectURL %></a></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
   </div>
</body>
</html>